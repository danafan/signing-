/* pages/collection_detail/collection_detail.wxss */
.collection_detail_box{
  position: absolute;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  box-sizing: border-box;
  padding-left: 30rpx;
}
.detail_item{
  border-bottom: 2rpx solid #E8E8E8;
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-right: 30rpx;
  box-sizing: border-box;
}
.label{
  font-size: 32rpx;
  color: #333333;
}
.value{
  font-size: 28rpx;
  color: #666666;
}
.button {
  box-sizing: border-box;
  padding-right: 30rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 354rpx;
}