/* pages/collection_record/collection_record.wxss */
.record_box{
  position: absolute;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  box-sizing: border-box;
  padding-left: 30rpx;
  overflow-y: scroll;
}
.record_item{
  border-bottom: 2rpx solid #E8E8E8;
  width: 100%;
  height: 180rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-right: 30rpx;
  box-sizing: border-box;
}
.title{
  font-size: 28rpx;
  color: #333333;
}
.time{
  margin-top: 2rpx;
  font-size: 24rpx;
  color: #999999;
}
.money{
  font-size: 40rpx;
  color: #3778FF;
  font-weight:500;
}