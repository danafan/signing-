/* pages/realname/realname.wxss */
.realname_box{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #FAFAFA;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.card{
  margin-top: 80rpx;
  border-radius: 16rpx;
  background: #fff;
  width: 660rpx;
  height: 340rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.card_title{
  font-size: 44rpx;
  color: #333333;
  font-weight:500;
}
.card_sub{
  margin-top: 8rpx;
  font-size: 24rpx;
  color:#666666;
}
.user_card{
  width: 136rpx;
  height: 112rpx
}
.pass{
  width: 100rpx;
  height: 124rpx
}
.toast{
  margin-top: 214rpx;
  font-size: 28rpx;
  color: #3778FF;
}