/* pages/user_info/user_info.wxss */
.user_info_box{
  position: absolute;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  box-sizing: border-box;
  padding-left: 30rpx;
}
.info_item{
  border-bottom: 2rpx solid #E8E8E8;
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-right: 30rpx;
  box-sizing: border-box;
}
.label{
  font-size: 32rpx;
  color: #333333;
}
.value{
  font-size: 28rpx;
  color: #666666;
}