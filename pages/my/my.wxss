/* pages/my/my.wxss */
.my_box{
  background: #E8E8E8;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.my_back_box {
  position: relative;
  width: 100%;
  height: 340rpx;
}

.my_back_img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.my_back_content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  display: flex;
  align-items: center;
}

.user_img {
  margin-left: 40rpx;
  margin-right: 34rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.user_info {
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.phone {
  font-weight: 600;
  font-size: 32rpx;
  color: #fff;
}

.ren_box {
  width: 108rpx;
  height: 36rpx;
  background: #d6e3ff;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.ren_icon{
  margin-right: 4rpx;
  width: 24rpx;
  height: 24rpx;
}
.ren_text{
  font-size: 22rpx;
  color: #3778FF;
}
.earnings_box{
  background: #fff;
  padding-left: 40rpx;
  width: 100%;
  height: 166rpx;
  border-bottom: 2rpx solid #E8E8E8;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.earnings_title{
  font-size: 24rpx;
  color: #999999;
}
.money{
  font-size: 56rpx;
  color: #333333;
  font-weight:600;
}
.tabs{
  background: #fff;
  width: 100%;
  height: 274rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.tab_item{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.tab_icon{
  width: 96rpx;
  height: 96rpx;
}
.tab_txt{
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #333333;
}
