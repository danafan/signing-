/* pages/receipt/receipt.wxss */
.receipt_box{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #FAFAFA;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.img_box{
  background: #D8D8D8;
  width: 684rpx;
  height: 548rpx;
}
.toast{
  margin-top: 24rpx;
  width: 100%;
  font-size: 24rpx;
  color: #3778FF;
}
.email{
  margin-top: 30rpx;
  background: #fff;
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.email_label{
  font-size: 28rpx;
  color: #333333;
}
.input{
  font-size: 28rpx;
  text-align: end;
}
.sub{
  margin-top: 30rpx;
  font-size: 24rpx;
  color: #999999;
}
.button {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 104rpx;
}