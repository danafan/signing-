/* pages/upload_userinfo/upload_userinfo.wxss */
.upload_top{
  padding-left: 30rpx;
}
.upload_title{
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  font-size: 30rpx;
  color: #333333;
  font-weight:500;
}
.img_box{
  border-radius: 8rpx;
  width: 400rpx;
  height: 260rpx;
  position: relative;
}
.card_img{
  border-radius: 8rpx;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.close{
  background: rgba(0, 0, 0, .6);
  position: absolute;
  top: 0;
  right: 0;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
}
.close_icon{
  width: 30rpx;
  height: 30rpx;
}
.margin{
  margin-top: 26rpx;
}
.input_item {
  border-top: 2rpx solid #e8e8e8;
  border-bottom: 2rpx solid #e8e8e8;
  padding-left: 30rpx;
  padding-right: 30rpx;
  width: 100%;
  height: 110rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}
.label {
  width: 184rpx;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.input {
  flex: 1;
  height: 110rpx;
  font-size: 30rpx;
}
.but_box{
  margin-top: 26rpx;
  display: flex;
  justify-content: center;
}